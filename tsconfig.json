{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["dom", "es2015"],  
    "sourceMap": true,         
    "strictNullChecks": true, 
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
